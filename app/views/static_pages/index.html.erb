<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mt-4">To Do List</h1>
      <div class="row" id="tasks"></div>
      <form id="create-task">
        <input type="text" id="new-task-content" required="" placeholder="Create task" />
        <button class="btn btn-success">Create</button>
      </form>
      <div class="mt-3">
        <button id="show-all" class="btn btn-secondary">All</button>
        <button id="show-completed" class="btn btn-secondary">Completed</button>
        <button id="show-active" class="btn btn-secondary">Active</button>
      </div>
    </div>
  </div>
</div>